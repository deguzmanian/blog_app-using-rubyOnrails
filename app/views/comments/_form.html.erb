<%= form_with(model: [ @article, @article.comments.build ], local: true) do |form| %>
    <%= form.text_field :commenter, class: 'form-control', value: current_user.fname, :hidden => true %>
    <%= form.text_area :body, class: 'form-control' %>
    <br>
    <%= form.submit "Comment", class: "btn btn-sm btn-info btn-block float-right" %>
<% end %>