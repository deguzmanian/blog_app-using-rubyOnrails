<!DOCTYPE html>
<html lang="en">
    <head>
        <%= csrf_meta_tags %>
        <%= csp_meta_tag %>
        <title>BLOG</title>

        <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
        </head>
    <body>
        <% if logged_in? %>
        <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark text-white">
            <div class="col-2">
                <div class="logo">
                    <%= image_tag("blog.png", :alt => "BLOG") %>
                </div>
            </div>
            <div class="col-8">
                <div class="campaign-name">
                    <span> control your thoughts ~ blog </span>
                </div>
            </div>
            <div class="col-2">
                <div class="form-inline float-right">
                    <div id="logout">
                        <i class="fa fa-sign-out"></i>&nbsp;<%= link_to 'Logout', 'logout', method: :get %>
                    </div>
                </div>
            </div>
        </nav>
        <div id="layoutSidenav">
            <div id="layoutSidenav_nav">
                <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                    <div class="sb-sidenav-menu">
                        <div class="nav">
                            <div class="sb-sidenav-menu-heading">dashboard</div>
                                <%= link_to 'Home', welcome_path, class: 'nav-link home'%>
                                <%= link_to 'Articles', articles_path, class: 'nav-link article'%>
                        </div>
                    </div>
                    <div class="sb-sidenav-footer">
                        <div class="small">Logged in as:</div>
                        <%= current_user.fname ? current_user.fname : current_user.username %>
                    </div>
                </nav>
            </div>
            <% end %>
            <div id="layoutSidenav_content" class="ml-3">
                <main>
                    <%= yield %>
                </main>
            </div>
        </div>
    </body>
</html>