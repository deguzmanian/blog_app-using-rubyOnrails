<%= form_with model: @article, local: true do |form| %>
    <% if @article.errors.any? %>
        <div id="error_explanation">
        <h2>
            <%= pluralize(@article.errors.count, "error") %> prohibited
            this article from being saved:
        </h2>
        <ul>
            <% @article.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
            <% end %>
        </ul>
        </div>
    <% end %>

    <div style="padding-top:10px">
        <%= form.label :title %><br>
        <%= form.text_field :title, class: "form-control"%><br>
        <%= form.label :context %><br>
        <%= form.text_area :context, class: "form-control"%><br>
        <%= form.submit "Add Article", class: "btn btn-success btn-sm"%>
        <%= link_to "Cancel", articles_path, class: "btn btn-danger btn-sm"%>
    </div>
<% end %>